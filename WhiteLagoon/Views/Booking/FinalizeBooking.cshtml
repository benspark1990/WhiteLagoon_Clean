@using Microsoft.AspNetCore.Components;
@model WhiteLagoon_Models.BookingDetail

<div class="container pt-4 mt-0 mt-lg-4">
    <div class="row" style="border: 1px solid #aaa;">

        <div class="col-12 col-lg-7 p-4 2 mt-4 mt-md-0">
            <div class="row p-1 my-1 " style="border-radius:20px; ">
                <div class="col-12">
                    <h3 class="text-success">Villa Details</h3>
                    <hr />
                </div>
                <div class="col-12 col-md-5">
                    <img src="@Model.Villa.ImageUrl" style="border-radius:10px;" width="100%" />
                </div>
                <div class="col-12 col-md-7">
                    <div class="row p-2">
                        <div class="col-12">
                            <p class="card-title text-warning" style="font-size:xx-large">@Model.Villa.Name</p>
                            <p class="card-text" style="font-size:large">
                                @((MarkupString)Model.Villa.Description)
                            </p>
                            @if (Model.Villa.VillaAmenity != null && Model.Villa.VillaAmenity.Count() > 0)
                            {
                                <p class="h5 text-white">Villa Amenities</p>
                                <ul>
                                    @foreach (var amenity in Model.Villa.VillaAmenity)
                                    {
                                        <li>
                                            @amenity.Name
                                        </li>
                                    }
                                </ul>
                            }
                        </div>
                    </div>
                    <div class="row col-12">
                        <span class="text-end p-0 pt-3 m-0">
                            <span class="float-right">Max Occupancy : @Model.Villa.Occupancy adults </span><br />
                            <span class="float-right pt-1">Villa Size : @Model.Villa.Sqft sqft</span><br />
                            <h4 class="text-warning font-weight-bold pt-5">
                                USD
                                <span style="border-bottom:1px solid #ff6a00">
                                    @Model.Villa.Price.ToString("#,#.00#;(#,#.00#)") / night
                                </span>
                            </h4>
                        </span>
                    </div>
                </div>


            </div>
        </div>
        <div class="col-12 col-lg-5 p-4 2 mt-4 mt-md-0">
            <form Model="HotelBooking">
                <input asp-for="VillaId" hidden/>
                <div class="row pt-1 mt-1 " style="border-radius:20px; ">
                    <div class="col-12">
                        <h3 class="text-success">Enter Booking Details</h3>
                        <hr />
                    </div>
                </div>
                
                <div class="form-group pt-0">
                    <label class="text-warning">Name</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group pt-2">
                    <label class="text-warning">Phone</label>
                    <input asp-for="Phone" class="form-control" />
                </div>
                <div class="form-group pt-2">
                    <label class="text-warning">Email</label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group pt-2">
                    <label class="text-warning">Check in Date</label>
                    <input asp-for="CheckInDate" class="form-control" />
                </div>
                <div class="form-group pt-2">
                    <label class="text-warning">Check Out Date</label>
                    <input asp-for="CheckOutDate" class="form-control" />
                </div>
                <div class="form-group pt-2">
                    <label class="text-warning">No. of nights</label>
                    <input asp-for="Nights" class="form-control" />
                </div>
                <div class="form-group pt-2">

                    @if (!Model.Villa.IsAvailable)
                    {
                        <input class="btn btn-secondary form-control" value="Sold Out" />
                    }
                    else
                    {
                        <button type="submit" class="btn btn-success form-control">Checkout Now</button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>