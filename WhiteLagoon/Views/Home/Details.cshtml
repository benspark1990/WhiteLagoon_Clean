@using Microsoft.AspNetCore.Components;
@model WhiteLagoon_Models.ViewModels.DetailsVM

<div class="mt-4 mx-4 px-0 px-md-5 mx-md-5">

    <div class="row p-2 my-3 " style="border-radius:20px; ">
        <div class="col-12 p-4" style="border: 1px solid #fff">
            <div class="row px-2 text-success border-bottom">
                <div class="col-8 py-1"><p style="font-size:x-large;margin:0px;">Selected Room</p></div>
                <div class="col-4 p-0"><a href="hotel/rooms" class="btn btn-secondary btn-block">Back to Room's</a></div>
            </div>

            <div class="row">
                <div class="col-6">
                    <img src="@Model.Villa.ImageUrl" width="100%" />
                </div>
                <div class="col-6">
                    <span class="float-right pt-4">
                        <span class="float-right">Max Occupancy : @Model.Villa.Occupancy adults </span><br />
                        <span class="float-right pt-1">Villa Size : @Model.Villa.Sqft sqft</span><br />
                        <h4 class="text-warning font-weight-bold pt-5">
                            USD
                            <span style="border-bottom:1px solid #ff6a00">
                                @Model.Villa.Price.ToString("#,#.00#;(#,#.00#)") / night
                            </span>
                        </h4>
                        <span class="float-right">@Model.Nights nights</span>
                    </span>
                </div>
            </div>
            <div class="row p-2">
                <div class="col-12">
                    <p class="card-title text-warning" style="font-size:xx-large">@Model.Villa.Name</p>
                    <p class="card-text" style="font-size:large">
                        @((MarkupString)Model.Villa.Description)
                    </p>
                </div>

            </div>
        </div>

       
    </div>
</div>